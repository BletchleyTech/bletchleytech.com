doctype html

html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="author", content="Jorge Gallego")
        meta(name="title", content=title)
        block meta
        title=title
        link(rel="canonical", href=`https://bletchleytech.com${path?path:""}`)
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js", integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf", crossorigin="anonymous")
        link(rel="stylesheet", href="/css/imports.css")
        link(rel="stylesheet", href="/css/bletchley.css")
        if title.includes("-")&&!(path.includes("success")||path.includes("failure"))
            link(rel="stylesheet", href="/css/h1.css")
        link(rel="stylesheet", href="/css/media.css")
        block styles
    body 
        header.container-fluid#title
            nav.navbar.navbar-expand-lg.navbar-dark.sticky-top
                a.navbar-brand(href=path==="/"?"#":"/") Bletchley Tech 
                button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbar", aria-controls="navbar", aria-expanded="false", aria-label="Toggle navigation")
                    i.bi-list
                article.collapse.navbar-collapse#navbar 
                    ul.navbar-nav
                        li.nav-item 
                            a.nav-link(href=path==="/about"?"#":"/about") About
                        li.nav-item 
                            a.nav-link(href=path==="/services"?"#":"/services") Services 
                        li.nav-item 
                            a.nav-link(href=path==="/contact"?"#":"/contact") Contact 
                        li.nav-item 
                            a.nav-link(href=path==="/faq"?"#":"/faq") FAQs
                        li.nav-item 
                            a.nav-link(href="https://thewebdevelopmentblog.net", rel="noreferrer noopener nofollow") Blog
            block title 
        block body
        footer.container-fluid#links 
            article.row
                aside.col-md-6 
                    h3 Quick Links 
                    a(href=path==="/about"?"#":"/about") About Us 
                    a(href=path==="/about/team"?"#":"/about/team") Our Team 
                    a(href=path==="/clients"?"#":"/clients") Our Clients
                    a(href=path==="/services"?"#":"/services") Our Services 
                    a(href=path==="/services/web"?"#":"/services/web") Web Development 
                    a(href=path==="/services/app"?"#":"/services/app") App Development 
                    a(href=path==="/contact"?"#":"/contact") Contact Us 
                    a(href=path==="/subscribe"?"#":"/subscribe") Subscribe
                    a(href=path==="/faq"?"#":"/faq") FAQs  
                    a(href="https://thewebdevelopmentblog.net", rel="noreferrer noopener nofollow") Blog
                aside.col-md-6
                    h3 Contact Us
                    p
                        a(href="mailto:contact@bletchleytech.com") 
                            i.bi-envelope-fill
                        a(href="tel:+573103324949")
                            i.bi-telephone-fill
                    address 
                        | Cra 102B # 148 - 31, 3-6-101
                        br
                        | Bogot√° D.C., Colombia
                    h3 Follow Us 
                    a.social(href="https://linkedin.com/company/bletchleytech", title="LinkedIn", target="_blank", rel="noreferrer noopener nofollow")
                        i.bi-linkedin
                        | LinkedIn
                    a.social(href="https://facebook.com/bletchley-tech", title="Facebook", target="_blank", rel="noreferrer noopener nofollow")
                        i.bi-facebook 
                        | Facebook
                    a.social(href="https://instagram.com/bletchley_tech", title="Instagram", target="_blank", rel="noreferrer noopener nofollow")
                        i.bi-instagram 
                        | Instagram
                    a.social(href="https://twitter.com/bletchley_tech", title="Twitter", target="_blank", rel="noreferrer noopener nofollow")
                        i.bi-twitter
                        | Twitter
            p.copy &copy; Bletchley Technological Solutions Inc. 2021
                span#year
        script(src="/js/year.js")
        block scripts 
        if title.includes("-")
            script(src="/js/title.js") 